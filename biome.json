{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "lineWidth": 100,
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "style": {
        "noUselessElse": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noConfusingVoidType": "info"
      },
      "complexity": {
        "useSimpleNumberKeys": "off"
      },
      "correctness": {
        "useImportExtensions": {
          "level": "error",
          "fix": "safe",
          "options": {
            "suggestedExtensions": {
              "ts": {
                "module": "js",
                "component": "jsx"
              }
            }
          }
        }
      }
    }
  }
}