{
  "name": "tfg",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist/",
    "build-ts": "tsc && cp -r ./src/ ./dist/source/",
    "build-programs": "cd ./programs/ && make",
    "copy-static": "cp -r ./public/* ./dist/ && mkdir -p ./dist/m6809/programs/ && cp ./programs/*.bin ./dist/m6809/programs/ && cp ./programs/*.s19 ./dist/m6809/programs/",
    "build": "npm run clean && npm run build-ts && npm run build-programs && npm run copy-static",
    "start": "serve -n -C -l 6809 ./dist/",
    "dev": "nodemon -e ts,js,json,jsonc,html,css --watch './src/*' --watch './public/*' --exec 'npm run build && npm run start || true'"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "nodemon": "^3.1.7",
    "serve": "^14.2.4",
    "typescript": "^4.3.5"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0-or-later"
}